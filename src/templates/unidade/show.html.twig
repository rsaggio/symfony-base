{% extends 'base.html.twig' %}

{% block title %}Unidade{% endblock %}

{% block body %}
    <h1>Unidade</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ unidade.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ unidade.nome }}</td>
            </tr>
        </tbody>
    </table>
    <hr>
    <h2>Alunos matriculados</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
        {% for aluno in unidade.alunos %}
            <tr>
                <td>{{ aluno.nome }}</td>
                <td>{{ aluno.email }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('unidade_index') }}">back to list</a>

    <a href="{{ path('unidade_edit', {'id': unidade.id}) }}">edit</a>

    {{ include('unidade/_delete_form.html.twig') }}
{% endblock %}
