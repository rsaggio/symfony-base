<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Livros do clube do livro</title>
    <style>
        form, table {
            width: 50%;
            margin: auto;
            border: 1px solid #ccc;
            padding: 50px;
            box-sizing: border-box;
            border-radius: 10px;
        }
        form > div {
            display: flex;
            flex: 1;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 10px;
        }
        form > div > label {
            font-size: 18pt;
        }
        form > div > input {
            margin-top: 15px;
            font-size: 18pt;
            padding: 5px 10px;
        }
        table {
            margin-top: 15px;
        }
        thead th {
            background: #333;
            color: #fff;
        }
    </style>
</head>
<body>
    {% for message in app.flashes('message') %}
    <h2>
        {{ message }}
    </h2>
    {% endfor %}
    {{ form_start(formLivro, {'action': path('editar_save', {'id': livro.id })}) }}
        {{ form_widget(formLivro) }}
        <input type="submit" value="Editar" />
    {{ form_end(formLivro) }}
</body>
</html>