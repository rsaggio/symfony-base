<!doctype html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Livros do clube do livro</title>
    <style>
        form, table {
            width: 50%;
            margin: auto;
            border: 1px solid #ccc;
            padding: 50px;
            box-sizing: border-box;
            border-radius: 10px;
        }
        form > div {
            display: flex;
            flex: 1;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            margin: 10px;
        }
        form > div > label {
            font-size: 18pt;
        }
        form > div > input {
            margin-top: 15px;
            font-size: 18pt;
            padding: 5px 10px;
        }
        table {
            margin-top: 15px;
        }
        thead th {
            background: #333;
            color: #fff;
        }
    </style>
</head>
<body>
    {% for message in app.flashes('message') %}
    <h2>
        {{ message }}
    </h2>
    {% endfor %}
    <form action="{{ path('editar_save', { 'id' : livro.id }) }}" method="post">
        <div>
            <label>Nome do livro</label>
            <input type="text" name="nome" value="{{ livro.nome }}"/>
        </div>
        <div>
            <label>Quantidade de p√°ginas</label>
            <input type="number" name="qtdPaginas" value="{{ livro.qtdPaginas }}"/>
        </div>
        <div>
            <label>Valor</label>
            <input type="text" name="valor" value="{{ livro.valor }}"/>
        </div>
        <div>
            <input type="submit" value="Editar"/>
        </div>
    </form>
</body>
</html>